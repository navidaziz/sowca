
<TextView
android:id="@+id/title_sessions"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/session_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Session Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/sessions"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/session_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Session Detail"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/session_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/start_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Start Date"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/session_detail"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/end_date"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="End Date"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/start_date"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_sessions"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>