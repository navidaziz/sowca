
<TextView
android:id="@+id/title_students"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/student_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Student Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/students"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/father_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Father Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/student_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/gender"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Gender"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/father_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/address"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Address"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/gender"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/mobile_no"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Mobile No"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/address"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/phone_no"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Phone No"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/mobile_no"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/class"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Class"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/phone_no"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/institute"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Institute"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/class"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/on_scholarship"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="On Scholarship"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/institute"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/scholarship_id"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Scholarship Id"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/on_scholarship"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/scholarship_value"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Scholarship Value"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/scholarship_id"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/transport"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Transport"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/scholarship_value"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_students"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>