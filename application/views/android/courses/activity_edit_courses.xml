
<TextView
android:id="@+id/title_courses"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Edit"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp"
android:paddingTop="60dp" />
		
						<EditText
						android:id="@+id/class"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Class"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/courses"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/course_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Name"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/class"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/course_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Detail"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/course_name"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/course_fee"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Fee"
						android:inputType="textText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/course_detail"
						android:layout_marginTop="42dp"/>
						
						
						<EditText
						android:id="@+id/is_subject"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Is Subject"
						android:inputType="textEditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:padding="12dp"
						android:layout_below="@+id/course_fee"
						android:layout_marginTop="42dp"/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Update"
android:id="@+id/btn_update_courses"
android:background="@xml/btnselector"
android:textColor="@android:color/background_light"
/>