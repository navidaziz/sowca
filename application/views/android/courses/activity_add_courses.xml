
<TextView
android:id="@+id/title_courses"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textAppearance="?android:attr/textAppearanceLarge"
android:text="Add"
android:textStyle="normal|bold"
android:textAlignment="center"
android:textColor="@android:color/background_light"
android:layout_centerHorizontal="true"
android:textSize="40dp" />
		
						<EditText
						android:id="@+id/class"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Class"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/courses"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/course_name"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Name"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/class"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/course_detail"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Detail"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/course_name"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/course_fee"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Course Fee"
						android:inputType="text"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/course_detail"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
						<EditText
						android:id="@+id/is_subject"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:hint="Is Subject"
						android:inputType="EditText"
						android:ems="10"
						android:singleLine="true"
						android:maxLength="30"
						android:layout_marginTop="10dp"
						android:layout_below="@+id/course_fee"
						android:layout_alignParentLeft="true"
        				android:layout_alignParentStart="true" 
						/>
						
						
<Button
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:text="Add"
android:id="@+id/btn_add_courses"
android:textColor="@android:color/background_light"
android:layout_below="@+id/is_subject"
/>